<div class="container">
  <header class="header text-down">
    <h1 id="title" class="text-center ">Facturas extra</h1>
  </header>
<div>
    {{#if error}}
    <div class="alert alert-danger">
      {{error}}
    </div>
  {{/if}}
</div> <br>
  <div class="form-wrap">
    <form id="invoice-form" action="/test/{{companyId}}/" method="post">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="month">Fecha</label>
            <input type="Date" name="month" id="month" class="form-control" required>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="description">Descripción</label>
            <select class="form-select" name="description">
              <option value="Mensual">Mensual</option>
              <option value="Extra">Extra</option>
            </select>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="payment">Pago</label>
            <input type="number" name="payment" id="payment" class="form-control">
          </div>
        </div>
      </div>
      <a href="/dashboard" class="btn btn-warning btn-modify">Atras</a>
      <button type="submit" class="btn btn-primary">Guardar factura</button>
    </form>
  </div>
</div><br><br>
<div class="container">
  <header class="header">
    <h1 id="title" class="text-center">Estado de cuenta mensual</h1>
  </header>
  <table class="table">
    <thead>
      <tr>
        <th>Mes</th>
        <th>Descripción</th>
        <th>Pago</th>
      </tr>
    </thead>
    <tbody>
      {{#each invoices}}
      <tr>
        <td>{{this.month}}</td>
        <td>{{this.description}}</td>
        <td>{{this.payment}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script src="/js/test.js"></script>